<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Picture</th>
      <th>Title</th>
      <th>Author</th>
      <th>Description</th>
      <th>Opnion</th>
      <th>Rating</th>
      <th>Read</th>
      <th>Wishlist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.picture %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.description %></td>
        <td><%= book.opnion %></td>
        <td><%= book.rating %></td>
        <td><%= book.read %></td>
        <td><%= book.wishlist %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @books, theme: 'bootstrap-5', pagination_class: "pagination-sm" %>

<%= link_to 'New Book', new_book_path %>
